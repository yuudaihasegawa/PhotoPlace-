<% if flash[:notice] %>
  <h4 class="alert alert-success text-center"><%= flash[:notice] %></h4>
<% end %>
<div class="container">
  <div class="top-back-sign">
    <div class="row">
      <div class="col-md-7">
      </div>
      <div class="col-md-5">
        <div class="row">
          <div class="col-md-12">
            <div class="text-center">
              <h1 class="top-h1">PhotoPlaceへ<br>ようこそ</h1>
            </div>
          </div>
        </div>
        <div classs="row">
          <div class="col-md-12">
            <div class="row">
              <div class="col-md-6 text-center">
                <%= link_to "sign in", new_user_session_path,class:"btn btn-success",role:"button"  %>
              </div>
              <div class="col-md-6 text-center">
                <%= link_to "sign up", new_user_registration_path,class:"btn btn-primary",role:"button" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="top-content">
    <div class="row">
      <div class="col-md-8">
        <p class="text-center">このサイトでは会員の投稿全てがGoogleマップ上に表示されます。</p>
        <p class="text-center">どのような場所でどんな風景が見れるのかが一目瞭然です！</p>
        <p class="text-center">サイトの使い方を知る前にmapを見てみませんか？</p>
      </div>
      <div class="col-md-4">
        <%= link_to public_maps_path, data: {"turbolinks" => false} do %>
          <i class="fas fa-map-marked-alt map-icon"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="top-back-tag">
    <h1 class="text-center back-text">人気のタグ</h1>
  </div>
  <div class="top-content">
    <div class="row">
      <% @tag_ranking.each do |tag| %>
        <div class="tag-ranking text-center">
          <%= link_to public_tag_path(tag),class:"btn btn-primary" do %>
            <%= tag.name %>
            (<%= tag.post_tags.count %>)
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="top-back-new">
    <h1 class="text-center back-text">新規投稿</h1>
  </div>
  <div class="top-content">
    <div class="row">
      <% @new_posts.each do |post| %>
        <div id="posts" >
          <div class="post_image">
            <%= link_to public_post_path(post) do %>
              <%= attachment_image_tag post.post_images.first, :image, size: "300x200", fallback: "no_image.jpg" %>
            <% end %>
          </div>
          <div class="post_text">
            <div class="row">
              <div class="col-md-6 text-center">
                  <%= post.title %>
              </div>
              <div class="col-md-6 text-center">
                <%= post.favorites.count %>いいね
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="text-center">
                  <%= post.address %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="top-back-popular">
    <h1 class="text-center back-text">人気の投稿</h1>
    <p></p>
  </div>
  <div class="top-content">
    <div class="row">
      <% @post_ranking.each do |post| %>
        <div id="posts" >
          <div class="post_image">
            <%= link_to public_post_path(post) do %>
              <%= attachment_image_tag post.post_images.first, :image, size: "300x200", fallback: "no_image.jpg" %>
            <% end %>
          </div>
          <div class="post_text">
            <div class="row">
              <div class="col-md-6 text-center">
                  <%= post.title %>
              </div>
              <div class="col-md-6 text-center">
                <%= post.favorites.count %>いいね
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="text-center">
                  <%= post.address %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
