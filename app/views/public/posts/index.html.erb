<% if flash[:notice] %>
        <h4 class="alert alert-success text-center"><%= flash[:notice] %></h4>
<% end %>
<div class="container-fluid">
  <%# <div class="row">
    <div class="col-12">
      <h1 class="page-title text-center">投稿一覧</h1>
    </div>
  </div> %>
  <div class="row">
    <div class="col-12 col-sm-12 col-md-2 col-lg-2 tag-search">
      <div class="col-md-12 text-center page-title">
        <h3>タグ</h3>
      </div>
      <div class="text-center">
        <%= search_form_for(@tag_search, url:public_posts_path)do |f| %>
          <%= f.search_field :name_cont ,class:"tag-field text-center"%>
          <%= f.submit "検索" ,class:"btn btn-secondary"%>
        <% end %>
      </div>
      <div class="row">
        <% @tags.each do |tag| %>
          <div class="tag-ranking text-center">
            <%= link_to public_tag_path(tag),class:"btn btn-primary btn-sm" do %>
              <%= tag.name %>
              (<%= tag.post_tags.count %>)
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-sm-12 col-md-10 col-lg-10">
      <div class="row">
        <div class="col-12">
          <div class="text-center">
            <%= search_form_for(@q,html: {class: 'post_pulldown'} , url:public_posts_path) do |f| %>
              <%= f.condition_fields do |c| %>
                <%= c.attribute_fields do |a| %>
                  <%= a.attribute_select associations: [] %>
                <% end %>
                <%= c.hidden_field :p, value: "cont" %>
                <%= c.value_fields do |v| %>
                  <%= v.search_field :value, placeholder: '検索ワードを入力' %>
                <% end %>
              <% end %>
              <%= f.submit "検索" ,class:"btn btn-secondary"%>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-12">
        <% @posts.each do |post| %>
            <div id="posts">
              <div class="post_image">
                <%= link_to public_post_path(post), data: {"turbolinks" => false} do %>
                  <%= attachment_image_tag post.post_images.first, :image,class:"image", fallback: "no_image.jpg" %>
                <% end %>
              </div>
              <div class="post_text">
                <div class="text-center">
                  <%= post.title %>
                </div>
                <div class="row">
                  <div class="col-6 text-center">
                    <%= post.user.name %>
                  </div>
                  <div class="col-6 text-center">
                    <%= post.favorites.count %> いいね
                  </div>
                </div>
              </div>
            </div>
        <% end %>
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>