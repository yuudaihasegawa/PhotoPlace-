<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="text-center">
        <h1><%= @post.title %></h1>
        <ul class="bxslider">
          <% @post.post_images.each do |image| %>
            <li class="text-center"><%= attachment_image_tag image, :image, size: "750x500", fallback: "no_image.jpg" %></li> 
          <% end %>
        </ul>
        <div class="row">
          <div class="post-show col-md-8">
            <div class="text-center">
              <% @post.post_tags.each do |post_tag| %>
                <%= post_tag.tag.name %>
              <% end %>
            </div>
          </div>
          <div class="post-show col-md-2">
            <% if @post.favorited_by?(current_user) %>
              <%= link_to public_post_favorites_path(@post),data: {"turbolinks" => false}, method: :delete do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= @post.favorites.count %> いいね
              <% end %>
            <% else %>
              <%= link_to public_post_favorites_path(@post),data: {"turbolinks" => false}, method: :post do %>
                <i class="fa fa-heart-o" aria-hidden="true"></i>
                <%= @post.favorites.count %> いいね
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="post-show content col-md-12">
            <p>投稿者コメント<br><%= @post.content %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 post-show">
            <p class="text-center">住所:<%= @post.address %><p>
            <div id="map" style='width: 100%; height: 500px;'></div>
            <script type="text/javascript">
              handler = Gmaps.build('Google');
              handler.buildMap({ provider: { scrollwheel: false }, internal: {id: 'map'}}, function(){
              markers = handler.addMarkers([
              {
              "lat": <%= @post.latitude %>,
              "lng": <%= @post.longitude %>
              }
              ]);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              handler.getMap().setZoom(17);
              });
            </script>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3">
        <div class="text-center">
          <%= render 'public/posts/comment_form', comment: @comment, post: @post %>
        </div>
        <h3>コメント一覧</h3>
        <div id="comment_index">
          <%= render 'public/comments/comment_index', comments: @comments %>
        </div>
    </div>
  </div>
</div>


