<div class="container">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-12">
        <% if flash[:success] %>
          <h4 class="alert alert-success text-center"><%= flash[:success] %></h4>
        <% end %>

        <% if @post.errors.any? %>
          <div class="error_explanation">
          <h2 class="text-center"><%= @post.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
              <p class="text-center"><%= message %></p>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-md-12">
        <h1 class="page-title text-center">投稿</h1>
      </div>
    </div>
    <%= form_for(@post, url: public_user_posts_path) do |f| %>
      <div class="row">
        <div class="col-md-12">
          <div class="text-center">
          <%= f.label :title %>
          <%= f.text_field :title, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="text-center">
            <%= f.label :content %>
            <%= f.text_area :content, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="text-center">
            <%= f.fields_for :post_images do |t| %>
              <%= render 'post_image_fields', f: t %>
            <% end %>
            <div class="links">
              <%= link_to_add_association "写真を追加", f, :post_images %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="text-center">
            <%= f.label :"住所"%>
            <%= f.text_area :address, class:"form-control" %>
          </div>
        </div>
      </div>
          	
      <div class="row">
        <div class="col-md-12">
          <div class="text-center">
            <%= f.fields_for :tags do |t| %>
              <%= render 'tag_fields', f: t %>
            <% end %>
            <div class="links">
              <%= link_to_add_association "タグを追加", f, :tags %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="text-center">
            <%= f.submit "投稿する",class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
</div>
