<div class="container-fluid text-center">
  <%= form_for @user, url: public_user_path(@user) do |f| %> 
    <div class="row no-gutters">
      <div class="edit col-12 col-sm-12 col-md-12 col-lg-12">
        <h3 class="text-center">
          <%= f.label :"名前" %><br />
          <%= f.text_field :name %>
        </h3>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
          <h5>顔写真</h5>
          <div class="form-group text-center">
            <%= f.attachment_field :profile_image %>
          </div>
      </div>
    </div>
    <div class="row no-gutters">
      <div class="edit col-12 col-sm-12 col-md-12 col-lg-12">
        <h3 class="text-center">
          <%= f.label :メールアドレス %><br />
          <%= f.text_field :email, autofocus: true %>
        </h3>
      </div>
    </div>
    <div class="row no-gutters">
      <div class="edit col-12 col-sm-12 col-md-12 col-lg-12">
        <h3 class="text-center">
          <%= f.label :"自己紹介文"%><br />
          <%= f.text_area :introduction, autofocus: true %>
        </h3>
      </div>
    </div>
    <div class="row no-gutters">
      <div class="edit col-12 col-sm-12 col-md-12 col-lg-12">
        <h3 class="text-center">
          <%= f.submit "更新する", class: "btn-lg btn-success" %>
        </h3>
      </div>
    </div>
  <% end %>
</div>

