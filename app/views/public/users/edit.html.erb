  <%= form_for @user, url: public_user_path(@user) do |f| %> 
  <div class="row">
    <div class="col-md-6">
      <h3 class="text-center">
        <%= f.label :"名前" %>
        <%= f.text_field :name %>
      </h3>
      <div class="form-group has-icon">
        <label class="control-label" for="inputProfile_image">顔写真</label>
        <%= f.attachment_field :profile_image,placeholder: "プロフィール画像" %>
      </div>
      <h3 class="text-center">
        <%= f.label :メールアドレス %>
        <%= f.text_field :email, autofocus: true %>
      </h3>
      <h3 class="text-center">
        <%= f.label :"自己紹介文"%>
        <%= f.text_field :introduction, autofocus: true %>
      </h3>
    </div>
  </div>
  <h3 class="text-center">
    <%= f.submit "更新する", class: "btn btn-lg btn-success" %>
  </h3>
  <% end %>