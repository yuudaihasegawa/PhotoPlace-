<%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
<h3><%= @user.name %></h3>
<h3>Email：<%= @user.email %></h3>
<h3>自己紹介文：<%= @user.introduction %></h3>
<h2>チャージ金額<%= @user.pocket_money %>円</h2>

<% if current_user.id == @user.id %>
  <%= link_to "編集",edit_public_user_path(@user) %>
  <%= link_to "退会",public_user_users_confile_path(@user) %>
<% end %>




<table class="table table-striped">
    <thead>
      <tr>
        <th>投稿写真</th>
        <th>タイトル</th>
        <th>値段</th>
        <th>投稿場所</th>
      </tr>
    <thead>

    <% @user.posts.each do |post| %>
      <tbody>
        <tr>
          <th>
            <% post.post_images.each do |image| %>
              <%= attachment_image_tag image, :image, size: "50x50", fallback: "no_image.jpg" %>
            <% end %>
          </th>
          <th>
            <%= link_to public_post_path(post) do %>
              <%= post.title %>
            <% end %>
          </th>
          <th><%= post.price %></th>
          <th><%= post.address %> </th>
        </tr>
      </tbody>
    <% end %>
</table>