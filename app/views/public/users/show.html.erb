<%= javascript_include_tag 'public/user_show.js' %>
<div class="container">
  <div class="wrap">
    <ul id="tab-menu-user" class="clearfix">
      <div class="row">
        <div class="col-4 col-sm-4 col-md-4 col-lg-4"><a href="#tab1" class="active">Profile</a></div>
        <div class="col-4 col-sm-4 col-md-4 col-lg-4"><a href="#tab2" class="">Post</a></div>
        <div class="col-4 col-sm-4 col-md-4 col-lg-4"><a href="#tab3" class="">Favorite</a></div>
      </div>
    </ul>
    <div id="tab-contents-user" class="clearfix">
      <div id="tab1" class="tab">
        <div class="row">
          <div class="col-sm-12 col-md-4 col-lg-4">
            <%= attachment_image_tag @user, :profile_image, class:"profile_image", fallback: "no_image.jpg" %>
          </div>
          <div class="col-12 col-sm-12 col-md-5 col-lg-5">
            <div class="text-left">
              <div class="row">
                <div class="col-12">
                  <h2 class="user-show text-center"><%= @user.name %></h2>
                </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <h4 class="user-show text-center">自己紹介文</h4>
                  <p class="user-introduction text-center"><%= @user.introduction %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-sm-12 col-md-3 col-lg-3">
            <div class="text-center">
              <% if current_user.id == @user.id %>
                <div class="btn">
                  <%= link_to "Edit",edit_public_user_path(@user),class:"btn btn-info",role:"button" %>
                </div>
                <div class="btn">
                  <%= link_to "Withdraw",public_user_users_confile_path(@user),class:"btn btn-danger",role:"button" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div id="tab2" class="tab">
        <div class="row">
          <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="text-center">
              <h2>Posted by <%= @user.name %></h2>
            </div>
            <% @user.posts.each do |post| %>
              <div id="posts" >
                <div class="post_image">
                  <%= link_to public_post_path(post) do %>
                    <%= attachment_image_tag post.post_images.first, :image, size: "300x200", fallback: "no_image.jpg" %>
                  <% end %>
                </div>
                <div class="post_text">
                  <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 text-center">
                        <%= post.title %>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 text-center">
                      <%= post.favorites.count %>いいね
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                      <div class="text-center">
                        <%= post.address %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div id="tab3" class="tab">
      <div class="row"> 
        <div class="col-sm-12 col-md-12 col-lg-12">
          <div class="text-center">
            <h2>Favorite Posts</h2>
          </div>
          <% @posts.each do |post| %>
            <div id="posts" >
              <div class="post_image">
                <%= link_to public_post_path(post) do %>
                  <%= attachment_image_tag post.post_images.first, :image, size: "300x200", fallback: "no_image.jpg" %>
                <% end %>
              </div>
              <div class="post_text">
                <div class="row">
                  <div class="col-6 col-sm-6 col-md-6 col-lg-6 text-center">
                      <%= post.title %>
                  </div>
                  <div class="col-6 col-sm-6 col-md-6 col-lg-6 text-center">
                    <%= post.favorites.count %>いいね
                  </div>
                </div>
                <div class="row">
                  <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="text-center">
                      <%= post.address %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
