<%= form_for(@post, url: admin_post_path) do |f| %>
    <%= f.label :title %>
		 <%= f.text_field :title, class:"form-control" %>

    <%= f.label :content %>
		<%= f.text_area :content, class:"form-control" %>

    <%= f.label :price %>
		<%= f.number_field :price, class:"form-control" %>

    <%= f.fields_for :post_images do |t| %>
      <%= render 'post_image_fields', f: t %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "写真を追加", f, :post_images %>
    </div>
    <%= f.label :"住所"%>
    <%= f.text_area :address, class:"form-control" %>
    
    <%= f.fields_for :post_tags do |t| %>
      <%= render 'post_tag_fields', f: t %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "タグを追加", f, :post_tags %>
    </div>
    
    <%= f.submit "投稿する",class:"btn btn-primary" %>
<% end %>