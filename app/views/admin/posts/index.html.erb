<% if flash[:notice] %>
        <h4 class="alert alert-success text-center"><%= flash[:notice] %></h4>        
<% end %>

<table class="table table-striped">
    <thead>
      <tr>
        <th>投稿写真</th>
        <th>タイトル</th>
        <th>値段</th>
        <th>投稿場所</th>
      </tr>
    <thead>

    <% @post.each do |post| %>
      <tbody>
        <tr>
          <th>
            <% post.post_images.each do |image| %>
              <%= attachment_image_tag image, :image, size: "50x50", fallback: "no_image.jpg" %>
            <% end %>
          </th>
          <th>
            <%= link_to admin_post_path(post) do %>
              <%= post.title %>
            <% end %>
          </th>
          <th><%= post.price %></th>
          <th><%= post.address %> </th>
        </tr>
      </tbody>
    <% end %>
</table>